<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_sign"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/sign" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayGreen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:paddingLeft="70dp"
            android:paddingTop="35dp"
            android:text="400-123-1234"
            android:textAllCaps="false"
            android:textColor="@color/colorGrayBlack"
            android:textSize="20sp" />

        <TextView
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingLeft="210dp"
            android:paddingTop="20dp"
            android:text="治疗时间"
            android:textAllCaps="false"
            android:textColor="@color/colorGrayBlack"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/user1"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:paddingLeft="210dp"
            android:paddingTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/colorGrayBlack"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_main"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="294dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="100dp"
                android:paddingTop="70dp"
                android:text="气瓶余量"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="192dp"
                android:layout_height="115dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="24sp" />

            <com.example.xc_nonapplication.CircleProgressView
                android:id="@+id/circle_progress"
                android:layout_width="175dp"
                android:layout_height="184dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                app:location_start="top"
                app:progress_color="#18c9f6"
                app:progress_width="10dp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="开始" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="match_parent">

<!--            <Button-->
<!--                android:id="@+id/btn_starttime"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="156dp"-->
<!--                android:paddingTop="70dp"-->
<!--                android:text="开始计时" />-->

<!--            <EditText-->
<!--                android:id="@+id/et_time"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="150dp"-->
<!--                android:layout_marginTop="170dp"-->
<!--                />-->
            

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="340dp"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:text="MINUTE"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"></TextView>


            <Button
                android:id="@+id/btn_complete1"
                android:layout_width="150dp"
                android:layout_height="62dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/bg_button_rectangle"
                android:maxLines="1"
                android:text="02"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:paddingTop="70dp"
                android:src="@drawable/second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="340dp"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:text="SECOND"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"></TextView>
            <Button
                android:id="@+id/btn_complete"
                android:layout_width="150dp"
                android:layout_height="62dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/bg_button_rectangle"
                android:maxLines="1"
                android:text="中止"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="294dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="50dp"
                android:paddingTop="70dp"
                android:text="正在配气"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"></TextView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:paddingTop="100dp"
                android:paddingRight="100dp"
                android:src="@drawable/gas3" />

            <Button
                android:id="@+id/btn_complete2"
                android:layout_width="150dp"
                android:layout_height="62dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/bg_button_rectangle"
                android:maxLines="1"
                android:text="完成"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:paddingTop="50dp"
                android:text="禁忌症:"
                android:textColor="@color/colorWhite"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="50dp"
                android:singleLine="false"
                android:text="18岁以下    呼吸中枢神经受损疾病者     心率过缓病者    严重支气管炎者(咳嗽)   支气管炎    肺炎患者   鼻出血\n 缺血性中风患者 肺部慢性疾病患者 女性经期 严重的传染性疾病患者  出血性综合症者 低血糖者 心里疾病者"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="---氙科医疗---"
            android:textColor="@color/colorWhite"
            android:textSize="23sp" />
    </LinearLayout>
</LinearLayout>